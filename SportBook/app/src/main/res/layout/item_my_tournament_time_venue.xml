<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llBlockTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp">

        <TextView
            android:id="@+id/tvTimeBlockLeft"
            style="@style/styleTimeVenueTimeBlock"
            android:text="" />

        <View style="@style/styleTimeBlockBorder" />

        <TextView
            android:id="@+id/tvTimeBlockRightOne"
            style="@style/styleTimeVenueIsAvailable" />

        <View style="@style/styleTimeBlockBorder" />

        <TextView
            android:id="@+id/tvTimeBlockRightTwo"
            style="@style/styleTimeVenueIsAvailable" />

        <View style="@style/styleTimeBlockBorder" />

        <TextView
            android:id="@+id/tvTimeBlockRightThree"
            style="@style/styleTimeVenueIsAvailable" />

        <View style="@style/styleTimeBlockBorder" />

        <TextView
            android:id="@+id/tvTimeBlockRightFour"
            style="@style/styleTimeVenueIsAvailable" />

        <View style="@style/styleTimeBlockBorder" />

        <TextView
            android:id="@+id/tvTimeBlockRightFive"
            style="@style/styleTimeVenueIsAvailable" />

        <View style="@style/styleTimeBlockBorder" />

        <TextView
            android:id="@+id/tvTimeBlockRightSix"
            style="@style/styleTimeVenueIsAvailable" />

        <View style="@style/styleTimeBlockBorder" />

        <TextView
            android:id="@+id/tvTimeBlockRightSeven"
            style="@style/styleTimeVenueIsAvailable" />

    </LinearLayout>

    <View
        android:id="@+id/ViewUnderline"
        style="@style/styleTimeBlockUnderline" />

</LinearLayout>